{
  "name": "pdf-render",
  "version": "1.0.0",
  "description": "API Dockerizada para geração de PDFs a partir de um HTML fornecido previamente, com Puppeteer e Chromium",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon src/server.ts",
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "format": "prettier --write \"src/**/*.{js,ts}\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsdom": "^22.1.0",
    "puppeteer": "^20.8.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dompurify": "^3.0.2",
    "@types/express": "^4.17.17",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "sucrase": "^3.32.0",
    "typescript": "^5.1.6"
  }
}
